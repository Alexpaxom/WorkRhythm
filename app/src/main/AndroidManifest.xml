<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alexpaxom.workrhythm">

    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WorkRhythm">
        <service
            android:name=".app.remindernotification.ForegroundHolderService"
            android:exported="false"/>

        <receiver
            android:name=".app.remindernotification.ReminderNotificationReceiver"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".app.activites.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.WorkRhythm.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".app.activites.FillTaskDataFormActivity"
            android:label="Add task"
            android:theme="@style/Theme.WorkRhythm.NoActionBar" />
    </application>

</manifest>